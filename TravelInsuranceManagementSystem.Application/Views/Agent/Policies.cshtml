@{
    ViewData["Title"] = "Agent Policies";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

<style>
    /* PAGE BACKGROUND */
    body {
        background: #fafafa;
    }

    /* TITLE */
    .page-title {
        font-size: 22px;
        font-weight: 700;
        color: #000;
        margin-bottom: 10px;
    }

    /* SEARCH */
    .search-box {
        max-width: 400px;
        margin-bottom: 15px;
    }

    /* FILTER BUTTONS */
    .filter-buttons .btn {
        margin-right: 5px;
        border-radius: 20px;
    }

        .filter-buttons .btn.active {
            background-color: #0d6efd;
            color: white;
        }

    /* TABLE */
    table {
        background: #ffffff;
        border-radius: 10px;
        overflow: hidden;
    }

    .table th {
        background: #f5f5f5;
        color: #000;
        font-weight: 600;
    }

    .table td {
        color: #333;
    }

    /* BADGES */
    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-active {
        background: #d4edda;
        color: #155724;
    }

    .badge-expired {
        background: #fff3cd;
        color: #856404;
    }

    .badge-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    /* PLAN */
    .plan-basic {
        font-weight: 600;
        color: #000;
    }

    .plan-premium {
        font-weight: 700;
        color: #1a73e8;
    }
</style>

<div class="container-fluid">

    <!-- TITLE -->
    <div class="page-title">Policies</div>

    <!-- SEARCH + FILTER -->
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control search-box" id="policySearch" placeholder="Search policies...">
        </div>

        <div class="col-md-6 text-end filter-buttons">
            <button class="btn btn-outline-primary btn-sm filter-btn active" data-status="all">All</button>
            <button class="btn btn-outline-success btn-sm filter-btn" data-status="active">Active</button>
            <button class="btn btn-outline-warning btn-sm filter-btn" data-status="expired">Expired</button>
            <button class="btn btn-outline-danger btn-sm filter-btn" data-status="cancelled">Cancelled</button>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table table-bordered align-middle" id="policyTable">
            <thead>
                <tr>
                    <th>Policy ID</th>
                    <th>Customer ID</th>
                    <th>Customer Name</th>
                    <th>Plan</th>
                    <th>Coverage</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>P01042</td>
                    <td>CUST-101</td>
                    <td>John Doe</td>
                    <td class="plan-basic">Basic</td>
                    <td>Medical</td>
                    <td>2023-05-01</td>
                    <td>2023-05-15</td>
                    <td class="status">Active</td>
                </tr>

                <tr>
                    <td>P01037</td>
                    <td>CUST-102</td>
                    <td>Jane Smith</td>
                    <td class="plan-premium">Premium</td>
                    <td>Trip Cancellation</td>
                    <td>2023-08-10</td>
                    <td>2023-09-25</td>
                    <td class="status">Expired</td>
                </tr>

                <tr>
                    <td>P01016</td>
                    <td>CUST-103</td>
                    <td>Michael Scott</td>
                    <td class="plan-premium">Premium</td>
                    <td>Medical</td>
                    <td>2024-01-05</td>
                    <td>2024-01-14</td>
                    <td class="status">Active</td>
                </tr>

                <tr>
                    <td>P00887</td>
                    <td>CUST-104</td>
                    <td>Jean Tremblay</td>
                    <td class="plan-basic">Basic</td>
                    <td>Lost Luggage</td>
                    <td>2024-03-15</td>
                    <td>2024-04-05</td>
                    <td class="status">Cancelled</td>
                </tr>

            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    <script>
        /* SEARCH */
        $("#policySearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#policyTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        /* FILTER */
        $(".filter-btn").click(function () {

            $(".filter-btn").removeClass("active");
            $(this).addClass("active");

            var status = $(this).data("status").toLowerCase();

            if (status === "all") {
                $("#policyTable tbody tr").show();
                return;
            }

            $("#policyTable tbody tr").each(function () {
                var rowStatus = $(this).find(".status").text().toLowerCase();
                $(this).toggle(rowStatus === status);
            });
        });
    </script>
}