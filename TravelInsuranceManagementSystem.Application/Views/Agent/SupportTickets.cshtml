@model IEnumerable<TravelInsuranceManagementSystem.Repo.Models.SupportTicket>

@{
    ViewData["Title"] = "Agent Support Tickets";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

@section Styles {
    <style>
        .search-box {
            max-width: 400px;
            border-radius: 10px;
        }

        .table thead th {
            padding: 1.25rem 1rem;
            background-color: #f8fafc;
            border-bottom: 2px solid #e2e8f0;
            color: #475569;
            font-size: 0.85rem;
            text-transform: uppercase;
        }

        .table tbody td {
            padding: 1.25rem 1rem;
            vertical-align: middle;
        }

        /* Badges */
        .badge-status {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 700;
            min-width: 100px;
            text-align: center;
        }

        .badge-open {
            background: #fff3cd;
            color: #856404;
        }

        .badge-progress {
            background: #e0f2fe;
            color: #0369a1;
        }

        .badge-success {
            background: #d4edda;
            color: #155724;
        }

        .badge-rejected {
            background: #f8d7da;
            color: #721c24;
        }

        .badge-closed {
            background: #e2e8f0;
            color: #475569;
        }

        .btn-manage {
            width: 34px;
            height: 34px;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            background: white;
            margin: 0 2px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-manage:hover {
                background: #f1f5f9;
                color: #2563eb;
            }

        .btn-delete:hover {
            color: #dc3545 !important;
            border-color: #f8d7da;
        }

        .full-text {
            background: #f8fafc;
            padding: 12px;
            border-radius: 8px;
            margin-top: 8px;
            border: 1px solid #e2e8f0;
            font-size: 0.85rem;
        }

        .see-more-btn {
            color: #2563eb;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 600;
            text-decoration: none;
        }
    </style>
}

<div class="mb-4">
    <h2 class="fw-bold m-0 text-navy">Support Center</h2>
    <p class="text-muted">Track customer issues and manage resolution workflows.</p>
</div>

<div class="row align-items-center mb-4 g-3">
    <div class="col-md-6">
        <div class="input-group search-box shadow-sm border-0">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
            <input type="text" id="ticketSearch" class="form-control border-start-0 ps-0" placeholder="Search by ID, Subject or Name...">
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0" id="ticketTable">
            <thead>
                <tr>
                    <th class="ps-4">ID</th>
                    <th>User ID</th>
                    <th>Contact Info</th>
                    <th>Issue Detail</th>
                    <th>Date</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        // --- FIX IS HERE: Access the property directly, do NOT use FirstOrDefault() ---
                        var details = item.ExtensionData;

                        <tr data-row-id="@item.TicketId">
                            <td class="ps-4 fw-bold">T-@item.TicketId</td>

                            <td><span class="text-muted">@item.UserId</span></td>

                            <td>
                                @if (details != null)
                                {
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark" style="font-size: 0.9rem;">
                                            @if (details.ContactMethod == "Email")
                                            {
                                                <i class="bi bi-envelope text-primary me-1"></i>
                                            }
                                            else if (details.ContactMethod == "WhatsApp")
                                            {
                                                <i class="bi bi-whatsapp text-success me-1"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-telephone text-info me-1"></i>
                                            }
                                            @details.ContactMethod
                                        </span>
                                        <span class="text-muted small">@details.ContactDetail</span>

                                        @if (!string.IsNullOrEmpty(details.RelatedId))
                                        {
                                            <span class="badge bg-light text-secondary mt-1 border">Ref: @details.RelatedId</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No details provided</span>
                                }
                            </td>

                            <td>
                                <div class="description-container">
                                    <span class="fw-bold d-block mb-1">@item.IssueDescription</span>

                                    @if (details != null && !string.IsNullOrEmpty(details.Subject))
                                    {
                                        <small class="text-secondary">@details.Subject</small>
                                    }
                                </div>
                            </td>

                            <td class="text-nowrap">@item.CreatedDate.ToString("MMM dd, yyyy")</td>

                            <td class="status-cell text-center">
                                @{
                                    var badgeClass = item.TicketStatus switch
                                    {
                                                        "In-Progress" => "badge-progress",
                                                        "Resolved" => "badge-success",
                                                        "Rejected" => "badge-rejected",
                                                        "Closed" => "badge-closed",
                                        _ => "badge-open"
                                    };
                                }
                                <span class="badge-status @badgeClass">@item.TicketStatus</span>
                            </td>

                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <button class="btn-manage edit-status-btn" data-id="@item.TicketId">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>

                                    <form asp-action="DeleteTicket" asp-controller="Agent" asp-route-id="@item.TicketId" method="post" onsubmit="return confirm('Permanently delete this ticket?');" style="display:inline;">
                                        <button type="submit" class="btn-manage btn-delete text-danger border-0">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header border-0 pb-0">
                <h6 class="modal-title fw-bold">Update Status</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="targetTicketId" />
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-info text-dark status-opt" data-status="In-Progress">In-Progress</button>
                    <button class="btn btn-outline-success text-dark status-opt" data-status="Resolved">Mark Resolved</button>
                    <button class="btn btn-outline-danger text-dark status-opt" data-status="Rejected">Reject</button>
                    <hr class="my-1">
                    <button class="btn btn-secondary status-opt" data-status="Closed">Close Ticket</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const statusModal = new bootstrap.Modal(document.getElementById('statusModal'));

            $('.edit-status-btn').on('click', function() {
                $('#targetTicketId').val($(this).data('id'));
                statusModal.show();
            });

            $('.status-opt').on('click', function() {
                const newStatus = $(this).data('status');
                const ticketId = $('#targetTicketId').val();

                $.post('/Agent/UpdateTicketStatus', { id: ticketId, status: newStatus }, function(response) {
                    location.reload();
                });
            });

            $("#ticketSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#ticketTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
}