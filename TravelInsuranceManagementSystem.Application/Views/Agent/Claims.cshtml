@{
    ViewData["Title"] = "Agent Claims";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

<style>
    /* SEARCH + FILTER */
    .search-box {
        max-width: 400px;
    }

    .filter-buttons .btn {
        margin-left: 5px;
    }

    /* BADGES */
    .badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-open {
        background: #fff3cd;
        color: #856404;
    }

    .badge-approved {
        background: #d4edda;
        color: #155724;
    }

    .badge-rejected {
        background: #f8d7da;
        color: #721c24;
    }

    /* PLAN */
    .plan-basic {
        font-weight: 600;
        color: #000;
    }

    .plan-premium {
        font-weight: 700;
        color: #1a73e8;
    }
</style>

<!-- PAGE TITLE -->
<div class="page-title">Claims</div>

<!-- SEARCH + FILTER -->
<div class="row align-items-center mb-3">
    <div class="col-md-6">
        <input type="text" id="claimSearch" class="form-control search-box" placeholder="Search claims...">
    </div>

    <div class="col-md-6 text-end filter-buttons">
        <button class="btn btn-outline-primary btn-sm filter-btn active" data-status="all">All</button>
        <button class="btn btn-outline-warning btn-sm filter-btn" data-status="open">Open</button>
        <button class="btn btn-outline-success btn-sm filter-btn" data-status="approved">Approved</button>
        <button class="btn btn-outline-danger btn-sm filter-btn" data-status="rejected">Rejected</button>
    </div>
</div>

<!-- TABLE -->
<div class="table-responsive">
    <table class="table table-bordered align-middle" id="claimsTable">
        <thead>
            <tr>
                <th>Policy ID</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Plan</th>
                <th>Coverage</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
               @* <th>Agent</th> *@
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>P01842</td>
                <td>CUST-101</td>
                <td>John Doe</td>
                <td class="plan-basic">Basic</td>
                <td>Medical</td>
                <td>₹5,500</td>
                <td>2023-05-10</td>
                <td class="status">
                    <span class="badge badge-open">Open</span>
                </td>
               @*  <td>Unassigned</td> *@
            </tr>

            <tr>
                <td>P01037</td>
                <td>CUST-102</td>
                <td>Jane Smith</td>
                <td class="plan-premium">Premium</td>
                <td>Trip Cancellation</td>
                <td>₹2,200</td>
                <td>2023-09-01</td>
                <td class="status">
                    <span class="badge badge-approved">Approved</span>
                </td>
@*                 <td>Sarah Jenkins</td>
 *@            </tr>

            <tr>
                <td>P01016</td>
                <td>CUST-103</td>
                <td>Michael Scott</td>
                <td class="plan-premium">Premium</td>
                <td>Medical</td>
                <td>₹3,200</td>
                <td>2024-01-17</td>
                <td class="status">
                    <span class="badge badge-rejected">Rejected</span>
                </td>
@*                 <td>Mike Ross</td>
 *@            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        /* SEARCH */
        $("#claimSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#claimsTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        /* FILTER */
        $(".filter-btn").click(function () {

            $(".filter-btn").removeClass("active");
            $(this).addClass("active");

            var status = $(this).data("status");

            if (status === "all") {
                $("#claimsTable tbody tr").show();
                return;
            }

            $("#claimsTable tbody tr").each(function () {
                var rowStatus = $(this).find(".badge").text().toLowerCase();
                $(this).toggle(rowStatus === status);
            });
        });
    </script>
}