@model IEnumerable<TravelInsuranceManagementSystem.Models.Payment>

@{
    ViewData["Title"] = "Agent Payments";
    Layout = "~/Views/Shared/_AgentLayout.cshtml";
}

<style>
    /* Keep your existing styles */
    body {
        background: #fafafa;
    }

    .page-title {
        font-size: 22px;
        font-weight: 700;
        color: #000;
        margin-bottom: 10px;
    }

    .search-box {
        max-width: 400px;
        margin-bottom: 15px;
    }

    .filter-buttons .btn {
        margin-right: 5px;
        border-radius: 20px;
    }

        .filter-buttons .btn.active {
            background-color: #0d6efd;
            color: white;
        }

    table {
        background: #ffffff;
        border-radius: 10px;
        overflow: hidden;
    }

    .table th {
        background: #f5f5f5;
        color: #000;
        font-weight: 600;
    }

    .table td {
        color: #333;
    }

    /* Dynamic Badge Colors */
    .badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }

    .badge-success {
        background: #d4edda;
        color: #155724;
    }

    .badge-pending {
        background: #fff3cd;
        color: #856404;
    }

    .badge-failed {
        background: #f8d7da;
        color: #721c24;
    }
</style>

<div class="container-fluid">

    <div class="page-title">Payments</div>

    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <input type="text" class="form-control search-box" id="paymentSearch" placeholder="Search payments...">
        </div>
        <div class="col-md-6 text-end filter-buttons">
            <button class="btn btn-outline-primary btn-sm filter-btn active" data-status="all">All</button>
            <button class="btn btn-outline-success btn-sm filter-btn" data-status="success">Success</button>
            <button class="btn btn-outline-warning btn-sm filter-btn" data-status="pending">Pending</button>
            <button class="btn btn-outline-danger btn-sm filter-btn" data-status="failed">Failed</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered align-middle" id="paymentTable">
            <thead>
                <tr>
                    <th>Policy ID</th>
                    <th>Payment ID</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    // LOOP THROUGH DATABASE DATA
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">P-@item.PolicyId</td>

                            <td>PAY-@item.PaymentId</td>

                            <td class="fw-bold">₹@item.PaymentAmount</td>

                            <td>@item.PaymentDate.ToString("yyyy-MM-dd")</td>

                            <td class="status">
                                @{
                                    // Convert Enum to String for display and logic
                                    var statusString = item.PaymentStatus.ToString();
                                    var badgeClass = "badge-pending";

                                    if (statusString == "SUCCESS")
                                    {
                                        badgeClass = "badge-success";
                                    }
                                    else if (statusString == "FAILED")
                                    {
                                        badgeClass = "badge-failed";
                                    }
                                }
                                <span class="badge @badgeClass">@statusString</span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted p-4">
                            No payment records found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts {
    <script>
        /* SEARCH SCRIPT */
        $("#paymentSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#paymentTable tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        /* FILTER SCRIPT */
        $(".filter-btn").click(function () {
            $(".filter-btn").removeClass("active");
            $(this).addClass("active");

            var status = $(this).data("status").toLowerCase();

            if (status === "all") {
                $("#paymentTable tbody tr").show();
                return;
            }

            $("#paymentTable tbody tr").each(function () {
                var rowStatus = $(this).find(".status").text().toLowerCase();
                if (rowStatus.indexOf(status) > -1) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    </script>
}