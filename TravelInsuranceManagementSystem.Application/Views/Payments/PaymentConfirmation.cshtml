@model TravelInsuranceManagementSystem.Models.Payment

@{

    Layout = "_Layout";

    ViewData["Title"] = "Payment Success | Travel Buddy";

}

<style>

    .success-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        text-align: center;
        padding: 40px;
        max-width: 600px;
        margin: 50px auto;
        border-top: 6px solid #28a745;
    }

    #receipt-content {
        background: white;
        padding: 20px;
        text-align: left;
    }

    .pdf-header {
        display: none;
        text-align: center;
        border-bottom: 2px solid #001f3d;
        margin-bottom: 20px;
        padding-bottom: 10px;
    }

    .details-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #f0f0f0;
    }

    .label-text {
        font-weight: 600;
        color: #666;
    }

    .value-text {
        font-weight: 700;
        color: #000;
    }

    .btn-download {
        background: #ed985f;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        border: none;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
        margin-top: 20px;
    }

    .btn-dashboard {
        display: block;
        margin-top: 15px;
        color: #001f3d;
        text-decoration: none;
        font-weight: bold;
    }
</style>

<div class="container">
    <div class="success-card">
        <div class="mb-3">
            <i class="fas fa-check-circle fa-4x text-success"></i>
        </div>
        <h2 style="color: #001f3d; font-weight: 800;">Success!</h2>
        <p class="text-muted">Your payment was processed successfully.</p>

        <div id="receipt-content">
            <div class="pdf-header">
                <h2 style="color: #001f3d;">TRAVEL BUDDY INSURANCE</h2>
                <p style="color: #ed985f; font-weight: bold;">PAYMENT RECEIPT</p>
            </div>

            <div class="details-row">
                <span class="label-text">Transaction ID</span>
                <span class="value-text">PAY-@Model.PaymentId</span>
            </div>
            <div class="details-row">
                <span class="label-text">Policy ID</span>
                <span class="value-text">P-@Model.PolicyId</span>
            </div>
            <div class="details-row">
                <span class="label-text">Date</span>
                <span class="value-text">@Model.PaymentDate.ToString("dd MMM yyyy, hh:mm tt")</span>
            </div>
            <div class="details-row" style="background:#f9f9f9; padding:10px; border:none; margin-top:10px;">
                <span class="label-text" style="color:#001f3d;">Amount Paid</span>
                <span class="value-text" style="color:#28a745; font-size:1.2rem;">₹@Model.PaymentAmount</span>
            </div>
            <p id="pdf-footer" style="display:none; text-align:center; font-size:10px; margin-top:20px;">

                System generated receipt for Travel Buddy Insurance.
            </p>
        </div>

        <button onclick="downloadPDF()" class="btn-download">
            <i class="fas fa-download me-2"></i> Download Receipt (PDF)
        </button>

        <a asp-controller="UserDashboard" asp-action="Dashboard" class="btn-dashboard">

            Back to Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <script>

        function downloadPDF() {

            const element = document.getElementById('receipt-content');

            const header = document.querySelector('.pdf-header');

            const footer = document.getElementById('pdf-footer');

            header.style.display = 'block';

            footer.style.display = 'block';

            const opt = {

                margin: 0.5,

                filename: 'TravelBuddy_Receipt_@Model.PaymentId' + '.pdf',

                image: { type: 'jpeg', quality: 0.98 },

                html2canvas: { scale: 2 },

                jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }

            };

            html2pdf().set(opt).from(element).save().then(() => {

                header.style.display = 'none';

                footer.style.display = 'none';

            });

        }
    </script>

}
