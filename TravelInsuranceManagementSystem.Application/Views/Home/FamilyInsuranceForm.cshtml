@* Views/Insurance/FamilyInsurance.cshtml *@
@{
    Layout = "_Layout";
    ViewData["Title"] = "Family Travel Insurance | Travel Buddy";
}

@section Styles {
    <style>
        :root {
            --navy: #001f3d;
            --accent: #ed985f;
            --accent-soft: #f7b980;
            --divider: #e6e6e6;
            --text: #1a1a1a;
            --text-muted: #495057;
            --card-bg: #ffffff;
            --page-bg: #f5f7fb;
        }

        body {
            font-family: "Segoe UI", sans-serif;
            background-color: var(--page-bg);
            color: var(--text);
            scroll-behavior: smooth;
        }

        .hero {
            background: linear-gradient(rgba(0,31,61,0.85), rgba(0,31,61,0.85)), url("https://images.unsplash.com/photo-1500530855697-b586d89ba3ee");
            background-size: cover;
            background-position: center;
            color: #fff;
            padding: 90px 20px;
            border-radius: 0 0 26px 26px;
            text-align: center;
        }

        .section {
            background: var(--card-bg);
            padding: 32px;
            margin-bottom: 28px;
            border-radius: 18px;
            box-shadow: 0 8px 22px rgba(0,0,0,0.08);
        }

        .card-plain {
            background: var(--card-bg);
            border-radius: 14px;
            border: 1px solid var(--divider);
            box-shadow: 0 6px 16px rgba(0,0,0,0.06);
            padding: 18px;
        }

        .form-label {
            font-weight: 600;
            color: var(--navy);
        }

        .divider {
            border-top: 1px dashed var(--divider);
            margin: 12px 0;
        }

        .btn-navy {
            background: var(--navy);
            color: #fff;
            border-radius: 10px;
            border: none;
        }

        .btn-accent {
            background: var(--accent);
            color: #fff;
            border-radius: 10px;
            border: none;
        }

        .btn-soft {
            background: var(--accent-soft);
            color: var(--navy);
            border-radius: 10px;
            border: none;
        }

        .member-card {
            border-left: 6px solid var(--accent);
        }

        .sticky-submit {
            position: sticky;
            bottom: 20px;
            z-index: 1020;
            background: var(--card-bg);
            border: 1px solid var(--divider);
            box-shadow: 0 8px 18px rgba(0,0,0,0.15);
            border-radius: 12px;
            padding: 16px;
        }

        .summary-line {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px dashed var(--divider);
        }
    </style>
}

@Html.AntiForgeryToken()

<div class="hero" role="banner">
    <h1>Family Travel Insurance</h1>
    <p class="mt-2">Secure your family's journey with a single Insurance ID — powered by <b>Travel Buddy</b>.</p>
</div>

<div class="container my-5">
    <form id="insuranceForm">
        <div class="section" id="policySection">
            <h3>Policy Details</h3>
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Trip Start</label>
                    <input type="date" class="form-control" id="TripStart" required />
                    <small class="text-muted">Start date must be today or later.</small>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trip End</label>
                    <input type="date" class="form-control" id="TripEnd" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Destination</label>
                    <input type="text" class="form-control" id="Destination" placeholder="e.g., Singapore" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Plan</label>
                    <select class="form-select" id="PlanType" required>
                        <option value="">Select Plan</option>
                        <option value="Basic">Basic</option>
                        <option value="Premium">Premium</option>
                    </select>
                </div>
            </div>
            <div class="divider"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Primary Email ID</label>
                    <input type="email" class="form-control" id="PrimaryEmail" placeholder="Enter correct email id (e.g. name@mail.com)" required />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Primary Phone Number</label>
                    <input type="tel" class="form-control" id="PrimaryMobile" placeholder="Enter correct 10-digit phone number" pattern="[0-9]{10}" title="Please enter exactly 10 digits" required />
                </div>
            </div>
        </div>

        <div class="section">
            <div class="d-flex align-items-center justify-content-between">
                <h3>Family Members</h3>
                <button type="button" class="btn btn-soft" id="addMemberBtn">+ Add Member</button>
            </div>
            <div id="membersContainer" class="mt-3"></div>
        </div>

        <div class="section">
            <h3>Nominee Details</h3>
            <div class="card-plain">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Nominee Full Name</label>
                        <input type="text" class="form-control" id="NomineeName" placeholder="Enter full name" pattern="[A-Za-z\s]+" title="Names should only contain letters" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Relation</label>
                        <select class="form-select" id="NomineeRelation" required>
                            <option value="">Select</option>
                            <option>Spouse</option>
                            <option>Son</option>
                            <option>Daughter</option>
                            <option>Parent</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Nominee Phone Number</label>
                        <input type="tel" class="form-control" id="NomineeMobile" placeholder="Nominee's phone number" pattern="[0-9]{10}" title="Please enter exactly 10 digits" />
                    </div>
                </div>
            </div>
        </div>

        <div class="section">
            <h3>Declarations</h3>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="IsResident" required>
                <label class="form-check-label" for="IsResident">All travellers are residents.</label>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="IsNotPEP" required>
                <label class="form-check-label" for="IsNotPEP">We are not PEP persons.</label>
            </div>
        </div>

        <div class="sticky-submit d-flex align-items-center justify-content-between">
            <div>
                <strong style="color: var(--navy)">Verify Details</strong><br>
                <small class="text-muted">Ensure all dates and contacts are correct.</small>
            </div>
            <div>
                <button class="btn btn-navy me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#summaryOffcanvas">View Summary</button>
                <button type="submit" id="submitBtn" class="btn btn-accent px-4">Submit & Generate ID</button>
            </div>
        </div>
    </form>
</div>

@* Summary Offcanvas *@
<div class="offcanvas offcanvas-end" tabindex="-1" id="summaryOffcanvas">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">Form Summary</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
        <div id="summaryBody"></div>
    </div>
</div>

@section Scripts {
    <script>
        const createEndpoint = '@Url.Action("CreateFamily", "Insurance")';
        const successEndpoint = '@Url.Action("Success", "Insurance")';
        const membersContainer = document.getElementById('membersContainer');
        let memberCounter = 0;

        // --- DATE VALIDATION LOGIC ---
        const today = new Date().toISOString().split('T')[0];
        const tripStartInput = document.getElementById('TripStart');
        const tripEndInput = document.getElementById('TripEnd');

        tripStartInput.setAttribute('min', today);

        tripStartInput.addEventListener('change', function() {
            tripEndInput.setAttribute('min', this.value);
            if (tripEndInput.value && tripEndInput.value < this.value) {
                tripEndInput.value = this.value;
            }
        });

        // --- MEMBER TEMPLATE ---
        const memberTemplate = (index) => `
            <div class="card-plain member-card mb-3" data-index="${index}">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">Member #${index + 1}</h5>
                    <button type="button" class="btn btn-outline-danger btn-sm remove-member-btn">Remove</button>
                </div>
                <div class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label">Title</label>
                        <select class="form-select field-watch" name="Members[${index}].Title" required>
                            <option value="">Title</option><option>Mr</option><option>Mrs</option><option>Ms</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">First Name</label>
                        <input class="form-control field-watch" name="Members[${index}].FirstName" placeholder="Enter first name" pattern="[A-Za-z]+" title="Letters only" required />
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Last Name</label>
                        <input class="form-control field-watch" name="Members[${index}].LastName" placeholder="Enter last name" pattern="[A-Za-z]+" title="Letters only" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Relation</label>
                        <select class="form-select field-watch" name="Members[${index}].Relation" required>
                            <option value="">Select</option><option>Self</option><option>Spouse</option><option>Child</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">DOB</label>
                        <input type="date" class="form-control field-watch" name="Members[${index}].DOB" max="${today}" required />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Phone Number</label>
                        <input type="tel" class="form-control field-watch" name="Members[${index}].Mobile" placeholder="10-digit number" pattern="[0-9]{10}" required />
                    </div>
                </div>
            </div>`;

        function addMember() {
            const wrapper = document.createElement('div');
            wrapper.innerHTML = memberTemplate(memberCounter++);
            membersContainer.appendChild(wrapper.firstElementChild);
            updateSummary();
        }

        membersContainer.addEventListener('click', (e) => {
            if (e.target.classList.contains('remove-member-btn')) {
                e.target.closest('.member-card').remove();
                reIndexMembers();
                updateSummary();
            }
        });

        function reIndexMembers() {
            const cards = membersContainer.querySelectorAll('.member-card');
            memberCounter = 0;
            cards.forEach((card, i) => {
                card.setAttribute('data-index', i);
                card.querySelector('.card-title').innerText = `Member #${i + 1}`;
                card.querySelectorAll('[name]').forEach(input => {
                    const name = input.getAttribute('name');
                    input.setAttribute('name', name.replace(/\[\d+\]/, `[${i}]`));
                });
                memberCounter++;
            });
        }

        function collectFormData() {
            const getVal = id => document.getElementById(id)?.value.trim() || '';

            return {
                policyDetails: {
                    TripStart: getVal('TripStart'),
                    TripEnd: getVal('TripEnd'),
                    Destination: getVal('Destination'),
                    PlanType: getVal('PlanType'),
                    PrimaryEmail: getVal('PrimaryEmail').toLowerCase(),
                    PrimaryMobile: getVal('PrimaryMobile')
                },
                nominee: {
                    NomineeName: getVal('NomineeName'),
                    NomineeRelation: getVal('NomineeRelation'),
                    NomineeMobile: getVal('NomineeMobile')
                },
                declarations: {
                    IsResident: document.getElementById('IsResident').checked,
                    IsNotPEP: document.getElementById('IsNotPEP').checked
                },
                members: Array.from(membersContainer.querySelectorAll('.member-card')).map(card => {
                    const obj = {};
                    card.querySelectorAll('[name]').forEach(input => {
                        const key = input.getAttribute('name').split('.').pop();
                        obj[key] = input.value.trim();
                    });
                    return obj;
                })
            };
        }

        function updateSummary() {
            const data = collectFormData();
            const lines = [
                `<div class="summary-line"><b>ID (Email)</b><span>${data.policyDetails.PrimaryEmail || '-'}</span></div>`,
                `<div class="summary-line"><b>Phone</b><span>${data.policyDetails.PrimaryMobile || '-'}</span></div>`,
                `<div class="summary-line"><b>Trip Start</b><span>${data.policyDetails.TripStart || 'Not set'}</span></div>`,
                `<div class="summary-line"><b>Trip End</b><span>${data.policyDetails.TripEnd || 'Not set'}</span></div>`
            ];
            data.members.forEach((m, i) => {
                lines.push(`<div class="summary-line"><span>${m.FirstName || 'Member ' + (i+1)}</span><span>${m.Relation || '-'}</span></div>`);
            });
            document.getElementById('summaryBody').innerHTML = lines.join('');
        }

        document.addEventListener('input', (e) => {
            if (e.target.id || e.target.classList.contains('field-watch')) updateSummary();
        });

        document.getElementById('addMemberBtn').addEventListener('click', addMember);

        document.getElementById('insuranceForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const data = collectFormData();
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const res = await fetch(createEndpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(data)
                });

                if(res.ok) {
                    const responseData = await res.json();
                    window.location.href = `${successEndpoint}?id=${responseData.id}`;
                } else {
                    const errorMsg = await res.text();
                    alert("Submission failed. Please verify your contact details and dates.");
                }
            } catch (err) {
                alert("Connection error. Check your internet.");
            }
        });

        addMember();
    </script>
}