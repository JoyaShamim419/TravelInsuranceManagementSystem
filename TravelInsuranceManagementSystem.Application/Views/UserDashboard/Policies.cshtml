@{
    ViewData["Title"] = "Policies";
    Layout = "~/Views/Shared/_UserDashboardLayout.cshtml";
}

@section Styles {
    <style>
        .panel {
            background: #fff;
            border: 1px solid #d7d7d7;
            border-radius: .75rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.06);
        }

        .btn-navy {
            background-color: #001f3d;
            border-color: #001f3d;
            color: #fff;
            border-radius: .6rem;
        }

            .btn-navy:hover {
                background-color: #00335f;
                border-color: #00335f;
            }

        .badge-active {
            background: #d2f6d6;
            color: #0b5c19;
        }

        .badge-expired {
            background: #ffd9d6;
            color: #7a0b00;
        }
    </style>
}

<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <h1 class="fw-bold m-0" style="color:#001f3d;">Policies</h1>
</div>

<div class="panel p-3">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Policy #</th>
                    <th>Plan</th>
                    <th>Coverage</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Documents</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample rows - replace with server data later -->
                <tr>
                    <td>TRVL-PL-8731</td>
                    <td>Gold</td>
                    <td>₹ 10,00,000</td>
                    <td>2025-11-01</td>
                    <td>2026-10-31</td>
                    <td><span class="badge badge-active">Active</span></td>
                    <td>—</td>
                </tr>
                <tr>
                    <td>TRVL-PL-8620</td>
                    <td>Silver</td>
                    <td>₹ 5,00,000</td>
                    <td>2024-12-01</td>
                    <td>2025-11-30</td>
                    <td><span class="badge badge-expired">Expired</span></td>
                    <td>—</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

