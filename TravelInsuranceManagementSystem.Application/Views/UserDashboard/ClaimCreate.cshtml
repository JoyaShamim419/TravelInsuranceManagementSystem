@model TravelInsuranceManagementSystem.Repo.Models.Claim

@{
    ViewData["Title"] = "File New Claim";
    Layout = "~/Views/Shared/_UserDashboardLayout.cshtml";
}

@section Styles {
    <style>
        :root {
            --color-navy: #001f3d;
            --color-navy-hover: #00335f;
        }

        .panel {
            background: #fff;
            border: 1px solid #d7d7d7;
            border-radius: .75rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

        .form-label {
            font-weight: 600;
            color: #495057;
            font-size: 0.9rem;
        }

        .req::after {
            content: " *";
            color: #dc3545;
        }

        .form-control, .form-select {
            border-radius: .6rem;
            padding: 0.6rem 0.75rem;
            border: 1px solid #dee2e6;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--color-navy);
                box-shadow: 0 0 0 0.2rem rgba(0, 31, 61, 0.1);
            }

        .btn-navy {
            background-color: var(--color-navy);
            color: #fff;
            border-radius: .6rem;
            padding: .6rem 1.5rem;
            font-weight: 600;
            border: none;
        }

            .btn-navy:hover {
                background-color: var(--color-navy-hover);
            }

        .file-preview {
            border: 2px dashed #dee2e6;
            border-radius: .75rem;
            padding: 1.5rem;
            background: #f8f9fa;
            text-align: center;
        }
    </style>
}

<div class="container-fluid py-3">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h1 class="fw-bold m-0" style="color:var(--color-navy);">File New Claim</h1>
            <p class="text-muted small m-0">Please provide the incident details and supporting documents.</p>
        </div>
        <a asp-controller="UserDashboard" asp-action="Claims" class="btn btn-outline-secondary d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i> Back to Claims
        </a>
    </div>

    <div class="panel p-4">
        <form asp-controller="Claims" asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="PolicyId" class="form-label req">Policy ID</label>
                    <input asp-for="PolicyId" class="form-control" placeholder="Enter Policy ID (e.g., 101)" required />
                    <span asp-validation-for="PolicyId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="IncidentType" class="form-label req">Incident Type</label>
                    <select asp-for="IncidentType" class="form-select" required>
                        <option value="">-- Select Type --</option>
                        <option value="Medical Emergency">Medical Emergency</option>
                        <option value="Baggage Loss">Baggage Loss</option>
                        <option value="Trip Cancellation">Trip Cancellation</option>
                    </select>
                    <span asp-validation-for="IncidentType" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="AgentId" class="form-label">Agent ID (If known)</label>
                    <input asp-for="AgentId" class="form-control" placeholder="e.g., 5" />
                </div>

                <div class="col-md-6">
                    <label asp-for="IncidentDate" class="form-label req">Date of Incident</label>
                    <input asp-for="IncidentDate" type="date" class="form-control" required />
                    <span asp-validation-for="IncidentDate" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ClaimAmount" class="form-label req">Claim Amount (₹)</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light">₹</span>
                        <input asp-for="ClaimAmount" class="form-control" type="number" step="0.01" placeholder="0.00" required />
                    </div>
                    <span asp-validation-for="ClaimAmount" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label req">Description of Incident</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Briefly describe what happened..." required></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Supporting Documents</label>
                    <div class="file-preview">
                        <i class="bi bi-cloud-arrow-up fs-2 text-muted"></i>
                        <p class="mb-2 mt-1">Click below to upload proof</p>

                        <input asp-for="DocumentFile" type="file" class="form-control" accept=".pdf,image/*" />
                    </div>
                    <small class="text-muted">Accepted formats: PDF, JPG, PNG (Max 10MB)</small>
                </div>
            </div>

            <div class="mt-5 d-flex gap-3">
                <button type="submit" class="btn btn-navy px-5">Submit Claim Request</button>
                <a asp-controller="UserDashboard" asp-action="Claims" class="btn btn-outline-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>