@model IEnumerable<TravelInsuranceManagementSystem.Models.ViewModels.AgentWorkloadViewModel>

@{

    ViewData["Title"] = "Manage Agents";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<style>

    .agent-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 1px solid #eef2f6;
        border-radius: 12px;
        overflow: hidden;
    }

        .agent-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
        }

    .agent-avatar {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #0E2A47 0%, #1a4d80 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .stat-box {
        background-color: #f8fafc;
        border-radius: 8px;
        padding: 10px;
        text-align: center;
        height: 100%;
    }

    .stat-value {
        font-weight: 700;
        font-size: 1.1rem;
        color: #0E2A47;
    }

    .stat-label {
        font-size: 0.75rem;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-navy fw-bold m-0">Agent Management</h2>
        <p class="text-muted small m-0">Manage your support team and view their workload.</p>
    </div>
    <a asp-action="CreateAgent" class="btn btn-primary shadow-sm">
        <i class="bi bi-person-plus-fill me-2"></i> Register New Agent
    </a>
</div>

@if (TempData["Success"] != null)

{
    <div class="alert alert-success alert-dismissible fade show" role="alert">

        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

}

@if (TempData["Error"] != null)

{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">

        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

}

<div class="row g-4">

    @if (Model != null && Model.Any())

    {

        foreach (var agent in Model)

        {
            <div class="col-12 col-md-6 col-xl-4">
                <div class="card agent-card h-100 shadow-sm">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="agent-avatar shadow-sm">

                                @agent.FullName.Substring(0, 1).ToUpper()
                            </div>
                            <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Active</span>
                        </div>

                        <h5 class="card-title fw-bold text-navy mb-1">@agent.FullName</h5>
                        <p class="text-muted small mb-3">
                            <i class="bi bi-envelope me-1"></i> @agent.Email <br />
                            <i class="bi bi-hash me-1"></i> User ID: @agent.Id
                        </p>

                        <div class="row g-2 mb-4">
                            <div class="col-6">
                                <div class="stat-box">
                                    <div class="stat-value text-warning">@agent.ClaimsHandled</div>
                                    <div class="stat-label">Claims</div>
                                </div>
                            </div>

                            
                        </div>

                        <div class="d-grid gap-2">
                            <form asp-action="DeleteAgent" asp-route-id="@agent.Id" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this agent? This cannot be undone.');">
                                <button type="submit" class="btn btn-outline-danger w-100 btn-sm">
                                    <i class="bi bi-trash me-2"></i> Delete Agent
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        }

    }

    else

    {
        <div class="col-12">
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                </div>
                <h5 class="text-muted">No agents found</h5>
                <p class="text-muted small">Click "Register New Agent" to create the first agent account.</p>
            </div>
        </div>

    }
</div>
