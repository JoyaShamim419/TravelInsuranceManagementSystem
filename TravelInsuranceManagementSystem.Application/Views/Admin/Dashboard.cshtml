@model TravelInsuranceManagementSystem.Repo.Models.AdminDashboardViewModel

@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    //ViewData["Title"] = "Dashboard";

}

<style>

    /* Badge Styles matching your layout */

    .badge-pill {
        padding: 5px 10px;
        border-radius: 50px;
        font-weight: bold;
        font-size: 0.8rem;
    }

    .badge-approved {
        background-color: #d4edda;
        color: #155724;
    }

    .badge-pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .badge-rejected {
        background-color: #f8d7da;
        color: #721c24;
    }

    .badge-open {
        background-color: #cce5ff;
        color: #004085;
    }
</style>

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Dashboard</h2>
    <div class="btn-group" role="group">
        <button class="btn btn-outline-primary status-btn active" data-status="All">All</button>
        <button class="btn btn-outline-primary status-btn" data-status="Active">Active</button>
        <button class="btn btn-outline-primary status-btn" data-status="Pending">Pending</button>
        <button class="btn btn-outline-primary status-btn" data-status="Resolved">Resolved</button>
    </div>
</div>

<div class="row g-2 mb-3">
    <div class="col-12 col-md-6">
        <input id="dashboardSearch" class="form-control" placeholder="Search recent activity..." />
    </div>
    <div class="col-12 col-md-6 text-md-end">
        <button id="exportDashboard" class="btn btn-primary">Export CSV</button>
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="text-muted small">Active Policies</div>
            <div class="fs-4 fw-bold">@Model.ActivePolicies</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="text-muted small">Open Claims</div>
            <div class="fs-4 fw-bold">@Model.OpenClaims</div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="text-muted small">Payments Today</div>
            <div class="fs-4 fw-bold">

                @((Model.TodayRevenue >= 1000) ? (Model.TodayRevenue / 1000).ToString("0.##") + "K" : Model.TodayRevenue.ToString("0"))
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="card p-3">
            <div class="text-muted small">Support Tickets</div>
            <div class="fs-4 fw-bold">@Model.OpenTickets</div>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table id="dashboardTable" class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Type</th>
                <th>Reference</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>

            @if (Model.RecentActivities != null && Model.RecentActivities.Any())

            {

                foreach (var item in Model.RecentActivities)

                {
                    <tr data-status="@(item.Status == "ACTIVE" || item.Status == "Approved" ? "Active" : (item.Status == "Pending" || item.Status == "Open" ? "Pending" : "Resolved"))">
                        <td>@item.Type</td>
                        <td>@item.ReferenceId</td>
                        <td>@item.CustomerName</td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td>
                        <td><span class="badge-pill @item.StatusColor">@item.Status</span></td>
                    </tr>

                }

            }

            else

            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No recent activity found.</td>
                </tr>

            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {

            // SEARCH

            $("#dashboardSearch").on("keyup", function () {

                var value = $(this).val().toLowerCase();

                $("#dashboardTable tbody tr").filter(function () {

                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);

                });

            });

            // FILTER BUTTONS

            $(".status-btn").click(function () {

                $(".status-btn").removeClass("active");

                $(this).addClass("active");

                var status = $(this).data("status");

                if (status === "All") {

                    $("#dashboardTable tbody tr").show();

                } else {

                    $("#dashboardTable tbody tr").hide();

                    // Simple filter logic: mapping button status to row data-status attribute

                    $("#dashboardTable tbody tr[data-status='" + status + "']").show();

                }

            });

        });
    </script>

}
