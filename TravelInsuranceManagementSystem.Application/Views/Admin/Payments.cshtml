@model IEnumerable<TravelInsuranceManagementSystem.Models.Payment>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Payment History";
}

<style>
    /* Custom Badge Styles to match your screenshot */
    .badge-status {
        padding: 8px 20px; /* Wider padding for pill shape */
        border-radius: 50px; /* Fully rounded ends */
        font-weight: 700; /* Bold text */
        font-size: 0.85rem; /* Readable size */
        text-transform: uppercase; /* SUCCESS instead of Success */
        display: inline-block;
        min-width: 100px; /* Uniform width */
        text-align: center;
        border: none;
    }

    /* Green Badge (Success) - Light Green Background, Dark Green Text */
    .status-success {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    /* Yellow Badge (Pending) - Light Yellow Background, Dark Yellow/Brown Text */
    .status-pending {
        background-color: #fff3cd;
        color: #664d03;
    }

    /* Red Badge (Failed) - Light Red Background, Dark Red Text */
    .status-failed {
        background-color: #f8d7da;
        color: #842029;
    }
</style>

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Payments</h2>
    <div class="btn-group" role="group">
        <button class="btn btn-outline-primary payments-status-btn active" data-status="All">All</button>
        <button class="btn btn-outline-primary payments-status-btn" data-status="Success">Success</button>
        <button class="btn btn-outline-primary payments-status-btn" data-status="Pending">Pending</button>
        <button class="btn btn-outline-primary payments-status-btn" data-status="Failed">Failed</button>
    </div>
</div>

<div class="row g-2 mb-3">
    <div class="col-12 col-md-6">
        <input id="paymentsSearch" class="form-control" placeholder="Search payments..." />
    </div>
    <div class="col-12 col-md-6 text-md-end">
        <button id="exportPayments" class="btn btn-primary">Export CSV</button>
    </div>
</div>

<div class="table-responsive">
    <table id="paymentsTable" class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Policy ID</th>
                <th>Payment ID</th>
                <th>Amount</th>
                <th>Payment Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    // Logic to get the correct class
                    var rawStatus = item.PaymentStatus.ToString().ToUpper();
                    var badgeClass = "status-pending"; // Default

                    if (rawStatus == "SUCCESS")
                    {
                        badgeClass = "status-success";
                    }
                    else if (rawStatus == "FAILED")
                    {
                        badgeClass = "status-failed";
                    }

                    <tr data-status="@rawStatus">

                        <td>#POL-@item.PolicyId</td>

                        <td>#PAY-@item.PaymentId</td>

                        <td class="fw-bold">₹@item.PaymentAmount</td>

                        <td>@item.PaymentDate.ToString("yyyy-MM-dd")</td>

                        <td>
                            <span class="badge-status @badgeClass">@rawStatus</span>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        No payment records found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // 1. SEARCH FUNCTIONALITY
        document.getElementById('paymentsSearch').addEventListener('keyup', function() {
            let searchValue = this.value.toLowerCase();
            let tableRows = document.querySelectorAll('#paymentsTable tbody tr');

            tableRows.forEach(row => {
                let rowText = row.innerText.toLowerCase();
                if (rowText.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // 2. FILTER BUTTON FUNCTIONALITY
        let filterButtons = document.querySelectorAll('.payments-status-btn');
        filterButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                filterButtons.forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                let statusFilter = this.getAttribute('data-status').toUpperCase();
                let tableRows = document.querySelectorAll('#paymentsTable tbody tr');

                tableRows.forEach(row => {
                    let rowStatus = row.getAttribute('data-status'); // "SUCCESS", "PENDING", etc.

                    if (statusFilter === 'ALL' || rowStatus === statusFilter) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>
}