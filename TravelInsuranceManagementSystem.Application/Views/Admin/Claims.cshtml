@model IEnumerable<TravelInsuranceManagementSystem.Repo.Models.ClaimViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Claims";
}

<style>
    .badge-pill {
        padding: 0.4em 0.8em;
        border-radius: 50rem;
        font-size: 0.75em;
        font-weight: 600;
        text-transform: uppercase;
    }

    .badge-open {
        background-color: #fff3cd;
        color: #856404;
    }
    /* Yellow */
    .badge-approved {
        background-color: #d4edda;
        color: #155724;
    }
    /* Green */
    .badge-rejected {
        background-color: #f8d7da;
        color: #721c24;
    }
    /* Red */
    .badge-pending {
        background-color: #e2e3e5;
        color: #383d41;
    }
    /* Grey/Default */
</style>

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">Claims</h2>
    <div class="btn-group" role="group">
        <button class="btn btn-outline-primary claims-status-btn active" data-status="All">All</button>
        <button class="btn btn-outline-primary claims-status-btn" data-status="Pending">Pending</button> <button class="btn btn-outline-primary claims-status-btn" data-status="Approved">Approved</button>
        <button class="btn btn-outline-primary claims-status-btn" data-status="Rejected">Rejected</button>
    </div>
</div>

<div class="row g-2 mb-3">
    <div class="col-12 col-md-6">
        <input id="claimsSearch" class="form-control" placeholder="Search claims..." />
    </div>
    <div class="col-12 col-md-6 text-md-end">
        <button id="exportClaims" class="btn btn-primary">Export CSV</button>
    </div>
</div>

<div class="table-responsive">
    <table id="claimsTable" class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>Policy ID</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Plan</th>
                <th>Coverage Type</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Status</th>
                <th>Agent</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="9" class="text-center text-muted py-4">No claims found.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    // Logic for badges
                    var statusClass = "badge-pending";
                    if (item.Status == "Approved") { statusClass = "badge-approved"; }
                    else if (item.Status == "Rejected") { statusClass = "badge-rejected"; }
                    else if (item.Status == "Pending" || item.Status == "Open") { statusClass = "badge-open"; }

                    // Agent Name Styling
                    var agentDisplay = item.AgentName;
                    var agentClass = agentDisplay == "Unassigned" ? "text-muted fst-italic" : "fw-bold text-dark";

                    <tr data-status="@item.Status">
                        <td>P-@item.PolicyId</td>
                        <td>CUS-@item.CustomerId</td>
                        <td>@item.CustomerName</td>
                        <td>@item.Plan</td>
                        <td>@item.CoverageType</td>
                        <td>₹@item.Amount.ToString("N0")</td>
                        <td>@item.ClaimDate.ToString("yyyy-MM-dd")</td>
                        <td><span class="badge-pill @statusClass">@item.Status</span></td>
                        <td><span class="@agentClass">@agentDisplay</span></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Filter Buttons Logic
            const buttons = document.querySelectorAll('.claims-status-btn');
            const tableRows = document.querySelectorAll('#claimsTable tbody tr');

            buttons.forEach(btn => {
                btn.addEventListener('click', () => {
                    // Update Active Button
                    buttons.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');

                    const status = btn.getAttribute('data-status');

                    tableRows.forEach(row => {
                        const rowStatus = row.getAttribute('data-status');

                        // Show if "All" or if status matches (Case insensitive check logic if needed)
                        if (status === 'All' || rowStatus === status) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            });

            // Simple Search Logic
            const searchInput = document.getElementById('claimsSearch');
            searchInput.addEventListener('keyup', function(e) {
                const term = e.target.value.toLowerCase();
                tableRows.forEach(row => {
                    const text = row.innerText.toLowerCase();
                    row.style.display = text.includes(term) ? '' : 'none';
                });
            });
        });
    </script>
}